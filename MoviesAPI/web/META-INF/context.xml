<?xml version="1.0" encoding="UTF-8"?>
<Context path="/movies">
    <Resource name="mongodb/movies"
          auth="Container"
          type="com.mongodb.MongoClient"
          closeMethod="close"
          factory="com.mongodb.client.jndi.MongoClientFactory"
          singleton="true"
          connectionString="mongodb://localhost:27017"/>    
</Context>
